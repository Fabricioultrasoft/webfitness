@model WebFitness.TpAula

@{
    ViewBag.Title = "Cadastrar";
}

<div class="span7">
    <div class="top-bar">
        <h3>
            <i class="icon-cog"></i>
            Cadastro de Tipo de Aula
        </h3>
    </div>
    <div class="well no-padding">
        @using (Html.BeginForm("Create", "TipoAula", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="control-group">
                @Html.LabelFor(model => model.dsTpAula, new { @class = "control-label" })

                <div class="controls">
                    @Html.EditorFor(model => model.dsTpAula, new { @class ="span6 m-wrap" })
                    @Html.ValidationMessageFor(model => model.dsTpAula)
                </div>
            </div>
            
            <div class="form-actions">
                <input type="submit" class="btn btn-success" value="Salvar" />
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-danger" })
            </div>
        }
    </div>
</div>
}