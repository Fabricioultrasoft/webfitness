@model WebFitness.Equipamento

@{
    ViewBag.Title = "Detalhes";
}

<div class="span7">
    <div class="top-bar">
        <h3>
            <i class="icon-cog"></i>
            Cadastro Equipamentos
        </h3>
    </div>
    <div class="well no-padding">

        <div class="control-group">
            @Html.LabelFor(model => model.idEquipamento, new { @class = "control-label" })

            <div class="controls">
                @Html.DisplayFor(model => model.idEquipamento)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.dsEquipamento, new { @class = "control-label" })

            <div class="controls">
                @Html.DisplayFor(model => model.dsEquipamento)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.idFornecedor, new { @class = "control-label" })

            <div class="controls">
                @Html.DisplayFor(model => model.Fornecedor.dsFornecedor)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.status_, new { @class = "control-label" })

            <div class="controls">
                @if (Model.status_ == (byte)WebFitness.Status.Ativo)
                {
                    @WebFitness.Status.Ativo
                }
                else
                {
                    @WebFitness.Status.Inativo
                }
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.dtCriacao, new { @class = "control-label" })

            <div class="controls">
                @Html.DisplayFor(model => model.dtCriacao)
            </div>
        </div>
        <div class="form-actions">
            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-danger" })
        </div>

    </div>
</div>
