@model WebFitness.Equipamento

@{
    ViewBag.Title = "Cadastrar";
}

<div class="span7">
    <div class="top-bar">
        <h3>
            <i class="icon-cog"></i>
            Cadastro Equipamentos
        </h3>
    </div>
    <div class="well no-padding">
        @using (Html.BeginForm("Create", "Equipamento", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="control-group">
                @Html.LabelFor(model => model.dsEquipamento, new { @class = "control-label" })

                <div class="controls">
                    @Html.EditorFor(model => model.dsEquipamento, new { @class = "span6 m-wrap" })
                    @Html.ValidationMessageFor(model => model.dsEquipamento)
                </div>
            </div>

            <div class="control-group">

                @Html.LabelFor(model => model.idFornecedor, new { @class = "control-label" })

                <div class="controls">
                    @Html.DropDownList("idFornecedor", String.Empty)
                    @Html.ValidationMessageFor(model => model.idFornecedor)
                </div>
            </div>

            <div class="form-actions">
                <input type="submit" class="btn btn-success" name="enviar" value="Salvar" />
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-danger" })
            </div>



        }

    </div>
</div>
