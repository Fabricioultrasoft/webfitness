@model WebFitness.Aula

@{
    ViewBag.Title = "Detalhes";
}

<div class="span7">
    <div class="top-bar">
        <h3>
            <i class="icon-cog"></i>
            Cadastro Aulas
        </h3>
    </div>
    <div class="well no-padding">

        <div class="control-group">
            @Html.LabelFor(model => model.dsAula, new { @class = "control-label" })

            <div class="controls">
                @Html.DisplayFor(model => model.dsAula)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.capacidade, new { @class = "control-label" })

            <div class="controls">
                @Html.DisplayFor(model => model.capacidade)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.observacao, new { @class = "control-label" })

            <div class="controls">
                @Html.DisplayFor(model => model.observacao)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.preco, new { @class = "control-label" })

            <div class="controls">
                @Html.DisplayFor(model => model.preco)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.status, new { @class = "control-label" })

            <div class="controls">
                @if (Model.status == (byte)WebFitness.Status.Ativo)
                {
                    @WebFitness.Status.Ativo
                }
                else
                {
                    @WebFitness.Status.Inativo
                }
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.dtCriacao, new { @class = "control-label" })

            <div class="controls">
                @Html.DisplayFor(model => model.dtCriacao)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.TpAula.dsTpAula, new { @class = "control-label" })

            <div class="controls">
                @Html.DisplayFor(model => model.TpAula.dsTpAula)
            </div>
        </div>


        <div class="form-actions">
            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-danger" })
        </div>

    </div>
</div>