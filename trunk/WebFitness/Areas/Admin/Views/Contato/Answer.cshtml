@model WebFitness.Contato

@{
    ViewBag.Title = "Responder";
}

<div class="span7">
    <div class="top-bar">
        <h3>
            <i class="icon-cog"></i>
            Contato Clientes
        </h3>
    </div>
    <div class="well no-padding">
        @using (Html.BeginForm("Answer", "Contato", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            @Html.HiddenFor(model => model.idContato)
            @Html.HiddenFor(model => model.assunto)
            @Html.HiddenFor(model => model.mensagem)
            @Html.HiddenFor(model => model.status)
            @Html.HiddenFor(model => model.nome)
            @Html.HiddenFor(model => model.dtCriacao)
            @Html.HiddenFor(model => model.email)           

            <div class="control-group">
                @Html.LabelFor(model => model.nome, new { @class = "control-label" })

                <div class="controls">
                    @Html.DisplayFor(model => model.nome, new { @class = "span6 m-wrap" })
                </div>
            </div>
            
            <div class="control-group">
                @Html.LabelFor(model => model.dtCriacao, new { @class = "control-label" })

                <div class="controls">
                    @Html.DisplayFor(model => model.dtCriacao, new { @class = "span6 m-wrap" })
                </div>
            </div>
            
            <div class="control-group">
                @Html.LabelFor(model => model.assunto, new { @class = "control-label" })

                <div class="controls">
                    @Html.DisplayFor(model => model.assunto, new { @class = "span6 m-wrap" })
                </div>
            </div>
            
            <div class="control-group">
                @Html.LabelFor(model => model.mensagem, new { @class = "control-label" })

                <div class="controls">
                    @Html.DisplayFor(model => model.mensagem, new { @class = "span6 m-wrap" })
                </div>
            </div>
            
            <div class="control-group">
                @Html.LabelFor(model => model.assuntoResposta, new { @class = "control-label" })

                <div class="controls">
                    @Html.EditorFor(model => model.assuntoResposta, new { @class = "span6 m-wrap" })
                    @Html.ValidationMessageFor(model => model.assuntoResposta)
                </div>
            </div>
            
            <div class="control-group">
                @Html.LabelFor(model => model.mensagemResposta, new { @class = "control-label" })

                <div class="controls">
                    @Html.TextAreaFor(model => model.mensagemResposta, 3, 1, new { @class = "span5 m-wrap" })
                    @Html.ValidationMessageFor(model => model.mensagemResposta)
                </div>
            </div>
            
            <div class="form-actions">
                <input type="submit" class="btn btn-success" name="enviar" value="Enviar resposta" />
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-danger" })
            </div>

        }

    </div>
</div>
