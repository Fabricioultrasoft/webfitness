@model WebFitness.Exercicio
@{
    ViewBag.Title = "Detalhes";
}

<div class="span7">
    <div class="top-bar">
        <h3>
            <i class="icon-cog"></i>
            Cadastro Exercícios
        </h3>
    </div>
    <div class="well no-padding">
        <div class="control-group">
            @Html.LabelFor(model => model.dsExercicio, new { @class = "control-label" })

            <div class="controls">
                @Html.DisplayFor(model => model.dsExercicio)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.observacao, new { @class = "control-label" })

            <div class="controls">
                @Html.DisplayFor(model => model.observacao)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.idTpExercicio, new { @class = "control-label" })

            <div class="controls">
                @Html.DisplayFor(model => model.TpExercicio.dsTpExercicio)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.dtCriacao, new { @class = "control-label" })

            <div class="controls">
                @Html.DisplayFor(model => model.dtCriacao)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.status, new { @class = "control-label" })

            <div class="controls">
                    @if (Model.status == (byte)WebFitness.Status.Ativo)
                    {
                         @WebFitness.Status.Ativo
                    }
                    else
                    {
                         @WebFitness.Status.Inativo
                    }
            </div>
        </div>

        <div class="form-actions">
            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-danger" })
        </div>
    </div>
</div>
