@model IEnumerable<WebFitness.TpAula>

@{
    ViewBag.Title = "Index";
}

<h2>Tipos de Aulas</h2>

<p>
    @Html.ActionLink("Cadastrar", "Create", null, new { @class = "btn btn-large btn-primary" })
</p>
<div class="well no-padding tab-content">
    <div class="tab-pane active" id="user-overview">
        <table class="data-table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.idTpAula)</th>
                    <th>@Html.DisplayNameFor(model => model.dsTpAula)</th>
                    <th>@Html.DisplayNameFor(model => model.status)</th>
                    <th>@Html.DisplayNameFor(model => model.dtCriacao)</th>
                    <th class="right">Editar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
    
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.idTpAula)</td>
                        <td>@Html.DisplayFor(modelItem => item.dsTpAula)</td>
                        <td>
                            @if (item.status == 1/*WebFitnessLib.classes.generated.General.status*/ )
                            {
                                <span class="label label-success label-height">Ativo</span>
                            }
                            else
                            {
                                <span class="label label-important">Inativo</span>
                            }

                        </td>
                        <td>@Html.DisplayFor(modelItem => item.dtCriacao)</td>
                        <td class="right">
                            
                            @Html.ActionLink("Editar", "Edit", new { id = item.idTpAula }, new { @class = "btn btn-info" })
                            
                            @if (item.status == 1/*WebFitnessLib.classes.generated.General.status*/ )
                            {
                                @Html.ActionLink("Inativar", "Inactive", new { id = item.idTpAula }, new { @class = "btn btn-danger" })
                            }
                            else
                            {
                                @Html.ActionLink("Ativar", "Active", new { id = item.idTpAula }, new { @class = "btn btn-success" })
                            }
                            
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
