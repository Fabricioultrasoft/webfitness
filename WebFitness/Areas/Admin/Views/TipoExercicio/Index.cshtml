@model IEnumerable<WebFitness.TpExercicio>

@{
    ViewBag.Title = "Index";
}

<h2>Tipo de Exercício</h2>

<p>
    @Html.ActionLink("Cadastrar", "Create", null, new { @class = "btn btn-large btn-primary" })
</p>
<div class="well no-padding tab-content">
    <div class="tab-pane active" id="user-overview">
        <table class="data-table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.idTpExercicio)</th>
                    <th>@Html.DisplayNameFor(model => model.dsTpExercicio)</th>
                    <th>@Html.DisplayNameFor(model => model.status)</th>
                    <th>@Html.DisplayNameFor(model => model.dtCriacao)</th>
                    <th class="right">Editar</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.idTpExercicio)</td>
                        <td>@Html.DisplayFor(modelItem => item.dsTpExercicio)</td>
                        <td>
                            @if (item.status == (byte)WebFitness.Status.Ativo)
                            {
                                <span class="label label-success label-height">@WebFitness.Status.Ativo</span>
                            }
                            else
                            {
                                <span class="label label-important">@WebFitness.Status.Inativo</span>
                            }

                        </td>
                        <td>@Html.DisplayFor(modelItem => item.dtCriacao)</td>
                        <td class="right">

                            @Html.ActionLink("Editar", "Edit", new { id = item.idTpExercicio }, new { @class = "btn btn-info" })

                            @if (item.status == (byte) WebFitness.Status.Ativo)
                            {
                                @Html.ActionLink("Inativar", "Inactive", new { id = item.idTpExercicio }, new { @class = "btn btn-danger" })
                            }
                            else
                            {
                                @Html.ActionLink("Ativar", "Active", new { id = item.idTpExercicio }, new { @class = "btn btn-success" })
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

